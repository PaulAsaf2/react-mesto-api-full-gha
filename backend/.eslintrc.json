{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
      "no-underscore-dangle": ["error", { "allow": ["_id"] }],
      "max-len": ["error", { "ignoreTrailingComments": true }],
      "linebreak-style": ["error", "windows"]
    }
}
